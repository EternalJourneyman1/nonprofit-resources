rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all resource-related collections
    match /resources/{document=**} {
      allow read: true;  // Anyone can read all resource documents and sub-collections
      allow write: false;  // Only admin can write (use Firebase Console)
    }
    
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /favorites/{favoriteId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    match /ratings/{ratingId} {
      allow read: true;  // Anyone can read ratings
      allow write: if request.auth != null;  // Only authenticated users can rate
    }
  }
}